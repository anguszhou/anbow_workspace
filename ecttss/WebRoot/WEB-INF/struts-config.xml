<?xml version="1.0" encoding="gbk"?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://struts.apache.org/dtds/struts-config_1_2.dtd">
<struts-config>

	<!--<form-beans>
		<form-bean name="loginForm" type="com.ambow.struts.form.LoginForm"></form-bean>
		</form-beans>  -->
	<action-mappings>
		<action path="/login" type="com.ambow.ects.action.UserAction" parameter="login">
			
			<forward name="success" path="/index.jsp" />

			<forward name="error" path="/error.jsp" />

		</action>

		<action path="/logout" type="com.ambow.ects.action.UserAction"
			parameter="logout">
			
			<forward name="login" path="/login.jsp"></forward>
			
		</action>
		
		<action path="/register" type="com.ambow.ects.action.UserAction"
			parameter="register">
			
			<forward name="success" path="/index.jsp"></forward>
			
		</action>
		
		<action path="/updateUser" type="com.ambow.ects.action.UserAction"
			parameter="updateUser">
			
			<forward name="success" path="/index.jsp"></forward>
			
		</action>
		
		<action path="/productList" type="com.ambow.ects.action.ProductAction"
			parameter="viewProduct">
			
			<forward name="productList" path="/specials.jsp"></forward>
			
		</action>
		
		<action path="/findById" type="com.ambow.ects.action.ProductAction"
			parameter="findById">
			
			<forward name="productdetails" path="/details.jsp"></forward>
			
		</action>
		
		<action path="/addCart" type="com.ambow.ects.action.CartAction"
			parameter="addCart">
			
			<forward name="addCart" path="/cart.jsp"></forward>
			
		</action>
		
		<action path="/clearCart" type="com.ambow.ects.action.CartAction"
			parameter="clearCart">
			
			<forward name="clearCart" path="/cart.jsp"></forward>
			
		</action>
		
		<action path="/modifyCart" type="com.ambow.ects.action.CartAction"
			parameter="modifyCart">
			
			<forward name="modifyCart" path="/cart.jsp"></forward>
			
		</action>
		
		<action path="/cancelProduct" type="com.ambow.ects.action.CartAction"
			parameter="cancelProduct">
			
			<forward name="modifyCart" path="/cart.jsp"></forward>
			
		</action>
		
		<action path="/orderList" type="com.ambow.ects.action.OrderAction"
			parameter="orderList">
			
			<forward name="orderList" path="/findAllOrder.jsp"></forward>
			
		</action>
		
		<action path="/viewOrder" type="com.ambow.ects.action.OrderAction"
			parameter="viewOrder">
			
			<forward name="viewOrder" path="/order_detail.jsp"></forward>
			
		</action>
		
	</action-mappings>

</struts-config>
