	public List findAll() {
		Session session = null;
		
		Transaction tran = null;
		
		List list = null;
		try{
			//获得session
			session = sf.openSession();
			
			//开始事务
			
			tran = session.beginTransaction();
			
			//do some work
			String hql ="from Student";
			
			Query query = session.createQuery(hql);
			
			list = query.list();
				
			//事务提交
			
			tran.commit();
		}catch(Exception e){
			
			e.printStackTrace();
			
			tran.rollback();
		}finally{
			
			session.close();
		}
		
		return list;
	}

	
